package Ejercicios;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Num9 {

	public static void main(String[] args) throws IOException {
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

		
		System.out.println("Escribe el número que quieras que se convierta en años y en dias: " );
		
		String numeroMinutos = br.readLine();
			int numeroMinutos2 = Integer.parseInt(numeroMinutos);
			
				int minutosEnAno = 60 * 24 * 365;
			
			
			String numeroAnos = br.readLine();
			int numeroAnos2 = Integer.parseInt(numeroAnos);
			
					int ResultadoAnos = (numeroMinutos2 / minutosEnAno);
			
			System.out.println("El resultado en años es: " + ResultadoAnos);
			
			String numeroDias = br.readLine();
			int numeroDias2 = Integer.parseInt(numeroDias);
			
			
			
				
			
					
					
					int ResultadoDias = (numeroMinutos2 / 60 / 24) / 365;
					
		System.out.println("AÑOS = " + ResultadoAnos);
		
		System.out.println("Dias = " + ResultadoDias);
					
			
			
			
			
			
			
		
		

	}

}
