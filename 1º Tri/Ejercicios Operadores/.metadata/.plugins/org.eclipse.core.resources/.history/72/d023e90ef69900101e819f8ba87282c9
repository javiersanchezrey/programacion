package Ejercicios;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Num9 {

	public static void main(String[] args) throws IOException {
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

		
		System.out.println("Escribe el número que quieras que se convierta en minutos, en años y en dias: " );
		
		String numeroMinutos = br.readLine();
			double numMin = Double.parseDouble(numeroMinutos);
			
			double Minutos = numMin * 60;
			
		System.out.println("El numero elegido es: " + Minutos + " minutos");

	}

}
