package Ejercicios;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Num9 {

	public static void main(String[] args) throws IOException {
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

		
		System.out.println();

		System.out.println("¿Cuál es el destino del viaje?");

		String destinoViaje = br.readLine();

		System.out.println("¿Cuál es la distancia?");

		double distanciaKM = Double.parseDouble(br.readLine());

		System.out.println("Cuánto consume tu coche a los 100Km?");

		double consumo = Double.parseDouble(br.readLine());

		System.out.println("Cuánto vale hechar gasolina?");

		double gasolina = Double.parseDouble(br.readLine());

		double Litros = (consumo / 100) * distanciaKM;

		double costeGasolina = ((consumo * gasolina) / distanciaKM);

		double horas = distanciaKM / 90;

		double costeKilometro = gasolina / distanciaKM;

		System.out.println("Los litros que vas a necesitar son : " + Litros + ", lo que te vas a gastar en llenar el depósito es: " + costeGasolina + ", vas a tardar " + horas + " y el coste por Kilometro es : " + costeKilometro);

					
			
			
			
			
			
			
		
		

	}

}
