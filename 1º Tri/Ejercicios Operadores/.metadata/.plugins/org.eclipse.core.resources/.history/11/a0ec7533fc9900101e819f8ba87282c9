package Ejercicios;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Num9 {

	public static void main(String[] args) throws IOException {
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

		
		System.out.println("Escribe el número que quieras que se convierta en años y en dias: " );
		
		String entrada = br.readLine();
		
			int minutos = Integer.parseInt(entrada);
			
			
			int minutosEnAno = 60 * 24 * 365;
			
				int años = (minutos / minutosEnAno);
				
			int totalDias = (minutos / 60 / 24) / 365;
			
				System.out.println( "Años: " + años);
				
				System.out.println(" Dias: " + totalDias);
					
			
			
			
			
			
			
		
		

	}

}
