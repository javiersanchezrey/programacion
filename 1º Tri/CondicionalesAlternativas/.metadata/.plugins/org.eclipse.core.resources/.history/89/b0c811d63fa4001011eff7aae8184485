package ej;
import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
public class ej {

	public static void main(String[] args) throws NumberFormatException, IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		
		System.out.println("Introduce la cantidad de horas que has trabajado: ");
		
		double numHoras = Double.parseDouble(br.readLine());
		
		double horasExtra = (numHoras - 40) * 1500;
		
		double sueldo = 0;
		
		if (numHoras < 40) {
			sueldo = (numHoras * 1000);
		}else if ( numHoras >= 40) {
			sueldo = numHoras * horasExtra;
		}
		
		System.out.println("El salario con " + numHoras + " horas, ser√°: " + sueldo);

	}
} 
